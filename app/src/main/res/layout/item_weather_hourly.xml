<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        tools:background="@color/blue"

        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_weather_hourly_time_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="24dp"

            tools:text="17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_weather_hourly_time_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/white"
            android:layout_marginStart="2dp"
            android:layout_marginTop="1dp"

            tools:text="00"
            app:layout_constraintTop_toTopOf="@+id/item_weather_hourly_time_hours"
            app:layout_constraintStart_toEndOf="@+id/item_weather_hourly_time_hours"/>

    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_weather_hourly_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_marginTop="16dp"

            tools:src="@drawable/ic_white_day_rain"

            app:layout_constraintTop_toBottomOf="@+id/item_weather_hourly_time_hours"
            app:layout_constraintStart_toStartOf="@+id/item_weather_hourly_time_hours"
            app:layout_constraintEnd_toEndOf="@+id/item_weather_hourly_time_minutes"/>

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_weather_hourly_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"

            tools:text="-270"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_weather_hourly_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

</android.support.constraint.ConstraintLayout>